---
layout: 'base.njk'

---

<article class="main-article">
<div class="container container--narrow flow">
  
    <h1 class="article-title in-blog-h-m">
      {{title}}
    </h1>
    <figure class="main-article__figure">
      <img src="{{image}}" alt="{{imageAlt}}">
      <figcaption>
        {{imageAlt}}
      </figcaption>
    </figure>
    
  {{content | safe }}
  <div class="flex-group">
      <a href="/" class="btn btn--primary"> Go to home </a>
<button class="btn btn--neutral" onclick="scrollToTop()">Scroll to Top</button>

  <script>
function scrollToTop() {
    window.scrollTo({
        top: 0,
        behavior: 'smooth'
    });
}
</script>


   </div>


</div>
</article>